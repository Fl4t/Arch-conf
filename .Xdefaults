! vim:enc=utf-8:nu:ai:si:et:ts=4:sw=4:ft=xdefaults:
! ----------------------------------------------------------------------------

! Xft font settings -----------------------------------------------------------

Xft*antialias: true
Xft*dpi: 96 
Xft*rgba: rgb
Xft*hinting: true
Xft*lcdfilter:  lcddefault
Xft*hintstyle:  hintfull

! Xcursor --------------------------------------------------------------------

Xcursor*theme: Vanilla-DMZ-AA
Xcursor*size:  16

! URxvt settings --------------------------------------------------------------

! fonts
URxvt*font: xft:Envy Code R:style=Regular:pixelsize=12
URxvt*boldFont: xft:Envy Code R:style=Bold:pixelsize=12
URxvt*italicFont: xft:Envy Code R:style=Italic:pixelsize=12
URxvt*boldItalicFont: xft:Envy Code R=boldItalic:pixelsize=12

! history
URxvt*saveLines: 32767

! eyecanky
URxvt*scrollBar: false
URxvt*colorUL: #00ff5f
URxvt*pointerBlank: true
URxvt*loginShell: false
URxvt*visualBell: false 
URxvt*fading: 10%
URxvt*cursorBlink: false 
URxvt*transparent: true
URxvt*shading: 15
URxvt*title: fl4t@archlinux 
URxvt*depth: 32 
URxvt*inheritPixmap: true
URxvt*urgentOnBell: true

! perl
URxvt*perl-lib: /usr/lib/urxvt/perl/
URxvt*perl-ext-common: default,matcher

! url launchable
URxvt*urlLauncher: /usr/bin/firefox
URxvt*matcher.button: 1

URxvt*matcher.pattern.1: \\bwww\\.[\\w-]+\\.[\\w./?&@#-]*[\\w/-]
URxvt*keysym.C-u: perl:matcher
URxvt*cutchars: "()*,<>[]{}|'
URxvt*insecure: true
URxvt*mapAlert: true
URxvt*skipBuiltinGlyphs: true
URxvt*imLocale: fr_FR.UTF-8
 
!URxvt*geometry: 95x41

! terminal colors ------------------------------------------------------------

*background: #252525
*foreground: #babdb6

