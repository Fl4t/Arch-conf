!Xft font settings -----------------------------------------------------------

Xft.antialias: true
Xft.dpi: 96 
Xft.rgba: rgb
Xft.hinting: true
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull

! Xcursor --------------------------------------------------------------------

Xcursor*theme: Vanilla-DMZ-AA
Xcursor.size:  16

!URxvt settings --------------------------------------------------------------

URxvt*font: xft:terminus:style=Regular:pixelsize=11
URxvt*boldFont: xft:terminus:style=Bold:pixelsize=11
URxvt*italicFont: xft:terminus:style=Italic:pixelsize=11
URxvt*boldItalicFont: xft:terminus=boldItalic:pixelsize=11
URxvt*saveLines: 32767
!Urxvt*borderless: true
URxvt*scrollBar: false
URxvt*loginShell: false
URxvt*secondaryScroll: true
URxvt*perl-lib: /usr/lib/urxvt/perl/
URxvt*perl-ext-common: default,matcher
URxvt*urlLauncher: /usr/bin/firefox
URxvt*matcher.button: 1
URxvt*matcher.pattern.1: \\bwww\\.[\\w-]+\\.[\\w./?&@#-]*[\\w/-]
URxvt*visualBell: false
URxvt*urgentOnBell: false
URxvt*keysym.C-u: perl:matcher
URxvt*cutchars: `‚Äù()'*<>[]{|}
URxvt*skipBuiltinGlyphs: true
URxvt*cursorBlink: false 
URxvt*geometry: 95x41

