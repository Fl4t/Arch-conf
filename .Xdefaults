! ----------------------------------------------------------------------------
! file:     ~/.Xdefaults
! author:   Fl4t
! ----------------------------------------------------------------------------

! Xft font settings -----------------------------------------------------------

Xft*antialias: false
Xft*dpi: 96
Xft*rgba: rgb
Xft*hinting: true
Xft*lcdfilter:  lcddefault
Xft*hintstyle:  hintfull

! Xcursor --------------------------------------------------------------------

Xcursor*theme: Vanilla-DMZ-AA
Xcursor*size:  16

! URxvt settings --------------------------------------------------------------

! fonts
URxvt*font: xft:Envy Code R:medium:pixelsize=13
URxvt*boldFont: xft:Envy Code R:medium:pixelsize=13
URxvt*italicFont: xft:Envy Code R:style=Italic:pixelsize=13
URxvt*boldItalicFont: xft:Envy Code R:boldItalic:pixelsize=13

! history
URxvt*saveLines: 65535

! eyecanky
URxvt*scrollBar: false
URxvt*colorUL: #84B5C1
URxvt*pointerBlank: true
URxvt*loginShell: false
URxvt*visualBell: false 
!URxvt*fading: 10
URxvt*cursorBlink: false 
URxvt*transparent: true
URxvt*shading: 0
URxvt*title: fl4t@archlinux 
URxvt*depth: 32 
URxvt*inheritPixmap: true
URxvt*urgentOnBell: true
!URxvt*geometry: 95x41

! perl
URxvt*perl-lib: /usr/lib/urxvt/perl/
URxvt.perl-ext-common: clipboard
URxvt.keysym.Mod4-c: perl:clipboard:copy
URxvt.keysym.Mod4-v: perl:clipboard:paste

! url launchable
URxvt*urlLauncher: /usr/bin/firefox
URxvt*matcher.button: 1

URxvt*matcher.pattern.1: \\bwww\\.[\\w-]+\\.[\\w./?&@#-]*[\\w/-]
URxvt*keysym.C-u: perl:matcher
URxvt*cutchars: "()*,<>[]{}|'
URxvt*insecure: true
URxvt*mapAlert: true
URxvt*skipBuiltinGlyphs: true
URxvt*imLocale: fr_FR.UTF-8
 
! terminal colors ------------------------------------------------------------

*background: #121212
*foreground: #babdb6

