[ NET: ${addr eth0} ]
[ CPU: ${cpu}% ]  
[ RAM: ${memperc}% ]
[ LOAD: $loadavg ]
[ UP: $uptime_short ]
[ DATE: ${time %d %b %Y} ]
[ TIME: ${time %H:%M:%S} ]
