gtk_color_scheme = "base_color:#ffffff\nfg_color:#212121\ntooltip_fg_color:#000000\nselected_bg_color:#A86A95\nselected_fg_color:#ffffff\ntext_color:#1A1A1A\nbg_color:#E0E0E0\ntooltip_bg_color:#F5F5B5\nmenu_fg_color:#f6f6f6\nmenu_bg_color:#303030"

