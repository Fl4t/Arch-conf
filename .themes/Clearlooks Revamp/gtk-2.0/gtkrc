	#GtkToolbar::shadow_type        	        = GTK_SHADOW_NONE

	WnckTasklist::fade-overlay-rect  	        = 0	# Glow the tasklist by changing the color, instead of overlaying it with a rectangle

	GtkEntry::honors-transparent-bg-hint            = TRUE
