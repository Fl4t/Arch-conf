#################### BUTTONS #######################

style "button"		= "default"
{

  fg[NORMAL]        =  "#f3ecba"
  text[NORMAL]        =  "#f3ecba"
  fg[ACTIVE]      =  "#1c0b01"
  text[ACTIVE]       = "#1c0b01"
  fg[PRELIGHT]        =  "#1c0b01"
  text[PRELIGHT]        = "#1c0b01"
  fg[INSENSITIVE]      =  "#f3ecba"
  text[INSENSITIVE]       =  "#f3ecba"
  bg[NORMAL]        =  "#1c0b01"



  engine "pixmap"
  {
    image
    {
      function			= BOX
      detail				= "buttondefault"
      recolorable		= TRUE
      file				= "Buttons/button-default.png"
      border			=  { 1, 1, 5, 7 }
      stretch			= TRUE
    }
    image
    {
      function			= BOX
      state				= PRELIGHT
      recolorable		= TRUE
      file				= "Buttons/button-prelight.png"
      border			= { 1, 1, 5, 7 }
      stretch			= TRUE
    }
    image
    {
      function			= BOX
      state				= ACTIVE
      file				= "Buttons/button-pressed.png"
      border			=   { 1, 1, 5, 7 }
      stretch			= TRUE
    }	
    image 
   {
     function			= BOX
     state				= INSENSITIVE
     file					= "Buttons/button-insensitive.png"
     border			=  { 1, 1, 5, 7 }
     stretch			= TRUE
    }
    image 
    {
      function			= BOX
      file				= "Buttons/button-normal.png"		
      border			=  { 1, 1, 5, 7 }
      stretch			= TRUE
     }	
  }
}

##################### PROGRESSBAR ###################x

style "progressbar" {
  
  fg[PRELIGHT]       		= "#f3ecba"
  
  xthickness            		= 1
  ythickness            		= 1

  engine "pixmap" 
  {
    image
    {
      function				= BOX
      detail					= "trough"
      file					= "ProgressBar/trough-progressbar-horiz.png"
      border				= { 1, 1, 5, 5 }
      stretch				= TRUE
      orientation			= HORIZONTAL 
    }
    image
    {
      function				= BOX
      detail					= "trough"
      file					= "ProgressBar/trough-progressbar-vert.png"
      border				= { 5, 5, 1, 1 }
      stretch				= TRUE
      orientation			= VERTICAL
    }
    image
    {
      function				= BOX
      detail					= "bar"
      file					= "ProgressBar/progressbar-horiz.png"
      border				=   { 1, 1, 5, 5 }
      stretch				= TRUE
      orientation			= HORIZONTAL 
    } 
    image
    {
      function				= BOX
      detail					= "bar"
      file					= "ProgressBar/progressbar-vert.png"
      border				= { 5, 5, 1, 1 }
      stretch				= TRUE
      orientation			= VERTICAL
    }
  }
}


style "theme-range"
{
  engine "pixmap"
  {
    image
    {
      function            = BOX
      recolorable        = FALSE
      detail                = "trough"
      file                = "Scrollbars/trough-horizontal.png"
      border            = { 30, 30, 0, 0 }
      stretch            = TRUE
      orientation        = HORIZONTAL
    }
    image
    {
      function            = BOX
      recolorable        = FALSE
      detail                = "trough"
      file                = "Scrollbars/trough-vertical.png"
      border            = { 0, 0, 30, 30 }
      stretch            = TRUE
      orientation        = VERTICAL
    }

    image
    {
      function                = SLIDER
      recolorable            = TRUE
      state                   = NORMAL
      file                    = "Scrollbars/slider-horiz.png"
      border                = { 5, 5, 5, 3 }
      stretch                = TRUE
      orientation            = HORIZONTAL
    }
    image
    {
      function                = SLIDER
      recolorable            = TRUE
     state                       = PRELIGHT
      file                    = "Scrollbars/slider-horiz-pre.png"
      border                = { 5, 5, 5, 3 }
      stretch                = TRUE
      orientation            = HORIZONTAL
    }
    image
    {
      function                = SLIDER
      recolorable            = TRUE
      state                   = INSENSITIVE
      file                    = "Scrollbars/slider-horiz.png"
      border                = { 5, 5, 5, 3 }
      stretch                = TRUE
      orientation            = HORIZONTAL
    }

    image
    {
      function                = SLIDER
      recolorable            = TRUE
      state                   = NORMAL
      file                    = "Scrollbars/slider-vert.png"
      border                = { 3, 3, 5, 5 }
      stretch                = TRUE
      orientation            = VERTICAL
    }
    image
    {
      function                = SLIDER
      recolorable            = TRUE
     state                       = PRELIGHT
      file                    = "Scrollbars/slider-vert-pre.png"
      border                = { 3, 3, 5, 5 }
      stretch                = TRUE
      orientation            = VERTICAL
    }
    image
    {
      function                = SLIDER
      recolorable            = TRUE
      state                   = INSENSITIVE
      file                    = "Scrollbars/slider-vert.png"
      border                = { 3, 3, 5, 5 }
      stretch                = TRUE
      orientation            = VERTICAL
    }
  }
}

