style "theme-default"
{
#GtkToolbar::shadow-type = GTK_SHADOW_NONE # no border for toolbar
GtkScrolledWindow::scrollbars-within-bevel = 1 # very important for better appearance
GtkScrolledWindow::scrollbar-spacing = 0 # 0 pixels between gtklist and scrollbar
  GtkRange::trough_border                = 0
  GtkRange::slider_width                = 15
  GtkRange::stepper_size                = 0
  GtkScrollbar::has-backward-stepper 		= 0
  #GtkScrollbar::has-secondary-backward-stepper 	= 1
  GtkScrollbar::has-forward-stepper		= 0
  #GtkScrollbar::has-secondary-forward-stepper	= 1
  GtkButton      ::default_border    = { 0, 0, 0, 0 }
  GtkRange       ::trough_border     = 0
  GtkPaned       ::handle_size       = 6
  GtkRange       ::slider_width      = 10
  GtkRange       ::stepper_size      = 5

  GtkScrollbar   ::min_slider_length = 35
  GtkCheckButton ::indicator_size    = 14
  GtkMenuBar     ::internal-padding  = 0
  GtkTreeView    ::expander_size     = 14
  GtkExpander    ::expander_size     = 16
  GtkScale       ::slider-length     = 24
  
  xthickness = 1
  ythickness = 1

#    base[ACTIVE]      ="#f3ebba"

    base[ACTIVE]      =  "#f3ecba"
    base[INSENSITIVE] =  "#f3ecba"
    base[NORMAL]     =  "#f3ecba"
    base[PRELIGHT]    =   "#331c0d"
    base[SELECTED]    =   "#331c0d"

    bg[ACTIVE]         = "#f3ecba"
    bg[INSENSITIVE]   = "#f3ecba"
    bg[NORMAL]       =  "#f3ecba"
    bg[PRELIGHT]      =   "#331c0d"
    bg[SELECTED]      =  "#331c0d"

    fg[ACTIVE]        = "#4c2913"
    fg[INSENSITIVE]   =  "#4c2913"
    fg[NORMAL]        =  "#4c2913"
    fg[PRELIGHT]      = "#000000"
    fg[SELECTED]      = "#000000"

    text[ACTIVE]      = "#4c2913"
    text[INSENSITIVE] = "#4c2913"
    text[NORMAL]      =   "#4c2913"
    text[PRELIGHT]    =  "#f3ecba"
    text[SELECTED]    =   "#f3ecba"


  engine "murrine" 
  {

	menuitemstyle = 2 # 0 = flat, 1 = glassy, 2 = striped
	scrollbar_color = "#acacac"
	scrollbarstyle = 3
	contrast = 1.0
	menustyle = 0
	glazestyle = 0 # 0 = flat hilight, 1 = curved hilight, 2 = concave style
	menubarstyle = 0 # 0 = flat, 1 = glassy, 2 = gradient, 3 = striped
	menubaritemstyle = 0 # 0 = menuitem look, 1 = button look
	menuitemstyle = 0 # 0 = flat, 1 = glassy, 2 = striped
	listviewheaderstyle = 0 # 0 = flat, 1 = glassy
	roundness = 0 # 0 = squared, 1 = old default, more will increase roundness
    	animation = FALSE # FALSE = disabled, TRUE = enabled
 	
      hilight_ratio = 0.909090
        gradients = FALSE
        listviewstyle = 0
  }
}



